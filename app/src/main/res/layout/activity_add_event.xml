<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.DELL.new_blood.Add_event">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbars"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                app:theme="@style/ToolbarStyle"

                android:background="#EC3051" />

            />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="106dp"
                android:layout_height="75dp"
                android:layout_marginLeft="280dp"
                android:layout_marginTop="0dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/hammad" />




        </RelativeLayout>
        <LinearLayout
            android:layout_width="330dp"
            android:layout_marginTop="20dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">
            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_password2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

        <EditText
            android:id="@+id/nameText"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/holo_red_dark"
            android:ems="10"
            android:hint="Name"
            android:inputType="textPersonName" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_password3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

        <EditText
            android:id="@+id/addressText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/holo_red_dark"
            android:ems="10"
            android:hint="Address"
            android:inputType="textPersonName" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_password4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

        <EditText
            android:id="@+id/msgText"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:ems="10"
            android:hint="Message"
            android:backgroundTint="@android:color/holo_red_dark"
            android:inputType="textMultiLine" />


            </android.support.design.widget.TextInputLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/man" />

        <Button
            android:id="@+id/img_btn"
            android:layout_width="15dp"
            android:layout_height="63dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/circle2"
            android:drawableTop="@drawable/rsz_camera"
            android:paddingTop="1dp"
            android:text="Add image"
            android:textColor="#fff"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/submit_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:paddingLeft="30dp"
            android:paddingRight="10dp"
            android:textColor="#fff"
            android:background="@drawable/circle2"
            android:drawableRight="@drawable/rsz_sumbit"
            android:text="Submit" />
    </LinearLayout>

    </LinearLayout>

</LinearLayout>
</LinearLayout>