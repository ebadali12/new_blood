<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:descendantFocusability="blocksDescendants"
    android:focusable="false"

    android:clickable="false"
    >

    <TextView
        android:id="@+id/donation_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:background="@drawable/circle6"
        android:text="Date"
        android:textColor="#fff"
        />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:paddingBottom="10dp"
        >

        <LinearLayout
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:paddingBottom="10dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:paddingBottom="10dp"
                >

                <TextView
                    android:id="@+id/txtTitle10"
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:text="Recepient"
                    android:textColor="#EC3051"

                    android:textSize="13sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtTitle"
                    android:layout_width="180dp"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"

                    android:gravity="center_vertical"

                    android:textColor="#EC3051"
                    android:textSize="13sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="260dp"
                android:layout_height="98dp"
                android:orientation="horizontal"
                android:padding="10dp"
                android:paddingBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentTop="true"

                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:text="Blood type"
                    android:textColor="#EC3051"

                    android:textSize="13sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/blood_type"
                    android:layout_width="40dp"
                    android:layout_height="60dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"

                    android:background="@drawable/circle3"
                    android:gravity="center_vertical"
                    android:textAlignment="center"
                    android:textColor="#fff"
                    android:textSize="13sp" />


            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:paddingBottom="10dp"
            >

            <Button
                android:id="@+id/call"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/red_call1"
                />

            <Button
                android:id="@+id/message"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/red_message"
                />


        </LinearLayout>

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="25dp"
            android:layout_marginTop="90dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/arrow3" />
        <!--<Button-->
        <!--android:textColor="#fff"-->
        <!--android:background="#000"-->
        <!--android:textSize="18sp"-->
        <!--android:textStyle="bold"-->
        <!--android:layout_width="100dp"-->
        <!--android:layout_height="50dp"-->
        <!--android:id="@+id/choose"-->
        <!--android:text="Choose"/>-->

    </LinearLayout>


    <TextView
        android:id="@+id/phonenum"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:visibility="invisible"
        android:paddingLeft="10dp"
        android:text=""
        />




</LinearLayout>